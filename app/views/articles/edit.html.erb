<h2>Edit</h2>
<%= form_for @article, url: update_article_path(@article), :method => :put do |f| %>
  <p> 
	<%= f.label :title %><br/>
	<%= f.text_field :title %>
  </p>

  <p> 
	<%= f.label :content %><br/>
	<%= f.text_area :content %>
  </p>

  <p> 
	<%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', user_articles_path %>
